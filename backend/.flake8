[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    venv,
    __pycache__,
    migrations,
    .git,
    .tox,
    .eggs,
    *.egg,
    build,
    dist,
    .venv
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
per-file-ignores =
    __init__.py:F401
    tests/*:S101
